  "components": {
    "schemas": {
      "DonorDTO": {
        "required": [
          "email",
          "name"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "name": {
            "minLength": 1,
            "pattern": "^[a-zA-Zא-ת ]+$",
            "type": "string"
          },
          "email": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "phone": {
            "pattern": "^05\\d{8}$",
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "GiftDTO": {
        "required": [
          "cardPrice",
          "name"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "name": {
            "minLength": 1,
            "pattern": "^[a-zA-Zא-ת ]+$",
            "type": "string"
          },
          "category": {
            "type": "string",
            "nullable": true
          },
          "cardPrice": {
            "maximum": 100,
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          },
          "donorId": {
            "type": "integer",
            "format": "int32"
          },
          "donorName": {
            "pattern": "^[a-zA-Zא-ת ]+$",
            "type": "string",
            "nullable": true
          },
          "shoppings": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ShoppingDTO"
            },
            "nullable": true
          },
          "isRaffled": {
            "type": "boolean",
            "default": false
          }
        },
        "additionalProperties": false
      },
      "GiftSortBy": {
        "enum": [
          "Price",
          "PurchasesCount"
        ],
        "type": "string"
      },
      "LoginRequestDTO": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "nullable": true
          },
          "password": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ShoppingCreateDTO": {
        "required": [
          "giftId",
          "userId"
        ],
        "type": "object",
        "properties": {
          "userId": {
            "maximum": 2147483647,
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          },
          "giftId": {
            "maximum": 2147483647,
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          },
          "quantity": {
            "type": "integer",
            "format": "int32",
            "default": 1
          }
        },
        "additionalProperties": false
      },
      "ShoppingDTO": {
        "required": [
          "giftId",
          "userId"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "userId": {
            "maximum": 2147483647,
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          },
          "giftId": {
            "maximum": 2147483647,
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          },
          "quantity": {
            "type": "integer",
            "format": "int32"
          },
          "userName": {
            "type": "string",
            "nullable": true
          },
          "email": {
            "type": "string",
            "nullable": true
          },
          "phone": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ShoppingSortBy": {
        "enum": [
          "Price",
          "Popularity"
        ],
        "type": "string"
      },
      "UserDTO": {
        "required": [
          "email",
          "password",
          "userName"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "userName": {
            "minLength": 1,
            "pattern": "^[a-zA-Zא-ת ]+$",
            "type": "string"
          },
          "email": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "phone": {
            "minLength": 10,
            "type": "string",
            "format": "tel",
            "nullable": true
          },
          "password": {
            "minLength": 1,
            "pattern": "^(?=.*[a-z])(?=.*[A-Z])(?=.*\\d).{6,}$",
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "description": "Enter JWT token like: Bearer {token}",
        "scheme": "Bearer",
        "bearerFormat": "JWT"
      }
    }
  },
